extends layout

block page
    center
        img.img-thumbnail.img-circle.img-responsive(src='/images/logo.png')
        p.lead Welcome to the SENZ switch Control Panel
  - var menu = 'login'
block content
  .col-md-4.col-md-offset-4
    div= error
    div
      form(action="/login", method="POST")
        p
          input.form-control(name="username", type="text", value="admin")
        p
          input.form-control(name="password", type="password", autofocus ,placeholder="***")
        p
          button.btn.btn-lg.btn-primary.btn-block(type="submit") Log in
